{
  "name": "root",
  "private": true,
  "scripts": {
    "commit": "git-cz",
    "version": "lerna version",
    "prebuild": "run-p tsc lint test",
    "prerelease": "yarn build",
    "release": "lerna publish from-git",
    "build": "lerna exec --concurrency 1 'yarn build'",
    "lint:script": "eslint ./packages -c .eslintrc.js --ext .js,.jsx,.ts,.tsx --fix --cache --no-error-on-unmatched-pattern",
    "lint": "run-p -c lint:*",
    "test": "jest --passWithNoTests",
    "tsc": "tsc"
  },
  "devDependencies": {
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.25",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "commitizen": "^4.2.3",
    "cz-lerna-changelog": "^2.0.3",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "jest-puppeteer": "^4.4.0",
    "lerna": "^3.22.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "puppeteer": "^7.0.1",
    "semantic-release": "^17.3.7",
    "ts-jest": "^26.5.0",
    "typescript": "^4.1.3"
  },
  "workspaces": [
    "packages/vue3-playground",
    "packages/vue3-render",
    "packages/toolkits"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  }
}
